{
  "name": "pos-universal-server",
  "version": "2.0.0",
  "description": "Universal Offline POS WiFi Sync Server - Auto-detects all network types",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "production": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start server.js --name pos-server",
    "pm2:stop": "pm2 stop pos-server",
    "pm2:restart": "pm2 restart pos-server",
    "pm2:logs": "pm2 logs pos-server",
    "install-pm2": "npm install -g pm2",
    "setup-autostart": "pm2 startup && pm2 save"
  },
  "keywords": [
    "pos",
    "offline",
    "wifi",
    "sync",
    "websocket",
    "real-time",
    "auto-detect",
    "universal"
  ],
  "author": "POS System",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
